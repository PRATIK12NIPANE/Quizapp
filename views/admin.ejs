<!-- views/admin.ejs -->

<%- include('partials/header') %>

<div class="jumbotron">
    <h1 class="display-4">Admin Dashboard</h1>
    <p class="lead">Manage quizzes here.</p>
</div>

<div class="row">
    <% for (let i = 0; i < allQuizzes.length; i++) { %>
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title"><%= allQuizzes[i].topic %></h5>
                    <a href="/quiz/<%= allQuizzes[i]._id %>" class="btn btn-primary">View Quiz</a>
                    <a href="/admin/edit/<%= allQuizzes[i]._id %>" class="btn btn-warning">Edit Quiz</a>
                    <!-- Button to trigger the modal -->
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal<%= i %>">
                        Delete Quiz
                    </button>
                </div>
            </div>
        </div>

        <!-- Modal for delete confirmation -->
        <div class="modal fade" id="deleteModal<%= i %>" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel<%= i %>" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteModalLabel<%= i %>">Delete Confirmation</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to delete this quiz?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <!-- Button to trigger the delete action -->
                        <a href="/admin/delete/<%= allQuizzes[i]._id %>" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</div>

<a href="/admin/add" class="btn btn-success">Add New Quiz</a>
<a href="/logout" class="btn btn-danger">Logout</a>

<%- include('partials/footer') %>
